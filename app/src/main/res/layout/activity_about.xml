<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/FDBWindowStyle"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.philip.myapplication.AboutActivity">

    <include layout="@layout/appbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="62dp"
        android:paddingRight="62dp"
        android:paddingTop="15dp">

        <TextView
            android:id="@+id/text_history_title"
            style="@style/FDBParagraphTitle"
            android:text="@string/our_story_history_title" />

        <TextView
            android:id="@+id/text_history_content"
            style="@style/FDBParagraph"
            android:text="@string/our_story_history_content" />

        <TextView
            android:id="@+id/text_inspiration_title"
            style="@style/FDBParagraphTitle"
            android:text="@string/our_story_inspiration_title" />

        <TextView
            android:id="@+id/text_inspiration"
            style="@style/FDBParagraph"
            android:text="@string/our_story_inspiration_content" />

        <TextView
            android:id="@+id/text_expertise_title"
            style="@style/FDBParagraphTitle"
            android:text="@string/our_story_expertise_title" />

        <TextView
            android:id="@+id/text_expertise_content"
            style="@style/FDBParagraph"
            android:text="@string/our_story_expertise_content" />

    </LinearLayout>
</LinearLayout>
