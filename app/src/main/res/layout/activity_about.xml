<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/FDBWindowStyle"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.philip.myapplication.AboutActivity"
    android:theme="@style/AppTheme2">

    <TextView
        android:id="@+id/text_history_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/our_story_history_title"
        android:textColor="@color/gold"
        android:textColorHighlight="@android:color/primary_text_dark"

        android:textSize="24dp" />

    <TextView
        android:id="@+id/text_history_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/our_story_history_content"
        android:textColor="@color/white"
        android:textColorHighlight="@android:color/primary_text_dark"

        android:textSize="16dp" />

</LinearLayout>
