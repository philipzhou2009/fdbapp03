<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/colorWheelLayout"
    style="@style/FDBWindowStyle"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/include"
        layout="@layout/appbar" />

    <include layout="@layout/bg_general" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/include"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/bg_colorwheel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:src="@drawable/colour_wheel_1180_oud" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="@string/heavy"
            android:paddingLeft="80dp"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/richer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:text="@string/richer"
            android:paddingRight="240dp"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/lighter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:text="@string/lighter"
            android:paddingRight="100dp"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/fresher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:text="@string/fresher"
            android:paddingLeft="220dp"
            android:textColor="@color/white"/>
    </RelativeLayout>


    <FrameLayout
        android:id="@+id/fcwdimlayer"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/include"
        android:alpha="0"
        android:foreground="#000000"
        android:visibility="gone">

    </FrameLayout>

</RelativeLayout>
