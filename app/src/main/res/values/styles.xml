<resources>

    <!-- Base application theme. -->
    <!--<style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">-->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="FDBButtonStyle0">
        <item name="android:layout_width">240dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:textSize">30dp</item>
    </style>

    <style name="FDBButtonStyle">
        <item name="android:layout_width">240dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:textSize">30dp</item>
        <item name="android:background">@drawable/button_general</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="FDBWindowStyle">
        <item name="android:background">@color/black</item>
    </style>

    <style name="FDBActionBar">
        <item name="android:background">@color/black</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?android:attr/actionBarSize</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>

    <style name="FDBParagraphTitle">
        <item name="android:textColor">@color/gold</item>
        <item name="android:textSize">24dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="FDBParagraph">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="FDBButtonPersonalityStyle">
        <item name="android:layout_width">140dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_margin">24dp</item>
    </style>

    <style name="FDBAppBarPersonalityStyle">
        <item name="android:textSize">20dp</item>
        <item name="android:layout_marginRight">24dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:gravity">center</item>

    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="FDBAppAbout">
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/gold</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:layout_gravity">center</item>


    </style>
</resources>
